<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mymovies">

    <uses-permission-sdk-23 android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyLibrary">
        <activity
            android:name="com.example.mymovies.FavoriteActivity"
            android:exported="true" />
        <activity
            android:name="com.example.mymovies.CurrentlyWatchingActivity"
            android:exported="true" />
        <activity
            android:name="com.example.mymovies.WantToWatchActivity"
            android:exported="true" />
        <activity
            android:name="com.example.mymovies.AlreadyWatchedMoviesActivity"
            android:exported="true" />
        <activity
            android:name="com.example.mymovies.MovieActivity"
            android:exported="true" />
        <activity
            android:name="com.example.mymovies.LoginActivity"
            android:exported="true" />
        <activity
            android:name="com.example.mymovies.RegisterActivity"
            android:exported="true" />
        <activity
            android:name="com.example.mymovies.AllMoviesActivity"
            android:exported="true" />
        <activity
            android:name="com.example.mymovies.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>